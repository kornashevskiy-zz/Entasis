<script src="{{ asset('js/jQuery.BlackAndWhite.min.js') }}"></script>
<script src="{{ asset('js/modernizr.js') }}"></script>
<script src="{{ asset('js/less-1.4.0.min.js') }}"></script>
<script src="{{ asset('js/jquery.typeMenu.js') }}"></script>
<script src="{{ asset('js/jquery.typeSticky.js') }}"></script>
<script src="{{ asset('js/jquery.custom.js') }}"></script>

<!-- End Document
================================================== -->
</body>
</html>
