{% extends '@Entasis/admin/index.html.twig' %}

{% block body %}
    <h2>Категории:</h2>
    <a href="{{ path('add_category') }}" class="btn btn-success">Добавить</a>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Категория</th>
            <th>Category</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.ruName }}</td>
                <td>{{ category.enName }}</td>
                <td>
                    <a href="{{ path('edit_category', {'id': category.id}) }}"><i class="fa fa-pencil"></i></a>
                    <a href="{{ path('remove_category', {'id': category.id}) }}" onclick="return confirm('Вы действительно хотите удалить категорию?')"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}